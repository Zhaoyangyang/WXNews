/**index.wxss**/
@import "./weui-navbar.wxss";

.navi_group {
  display: flex;
  flex-direction: row;
}

.navi_item {
  width: 14.3%;
  text-align: center;
  background-color: #aae1fc;
}

.list {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.list_item {
  width: 100%;
  display: flex;
  height: 260rpx;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
}

.list_item_content {
  width: 67%;
  height: 220rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}

.list_item_image {
  width: 33%;
  align-items: center;
}

.text_desc {
  display: flex;
  flex-direction: row;
  color: #a7a4a4;
}

.weui-tab__content {
  padding-top: 60px;
  text-align: center;
}
